			uObj.setPassword("Shubham4");
			uObj.setName("ShubhamFour");
			uObj.setEmail("Shubham4@test.com");
//			//Transaction tx = hbSession.beginTransaction();
//			
//			hbSession.persist(uObj);
//			
//			tx.commit();
//			
			
		}catch(HibernateException e) {
			e.printStackTrace();
		}

	}
}
